      padding-left 5px
      text-align left

.header
  -webkit-app-region drag
  text-align center
  position fixed
  z-index 9999
  top 0
  width 100%
  height 44px
  line-height 44px
  color black
  text-shadow 0 1px rgba(255,255,255,0.5)
  border-bottom 1px solid #ddd
  background #f6f6f8
  box-shadow inset 0 1px rgba(255,255,255,0.8),inset 0 -1px rgba(255,255,255,0.3)
  position relative
  &:hover
    .control
      display block
    a
      &.osx-window-btn
        &.red
          transition .2s
          background #FF5955
        &.yellow
          transition .2s
          background #FFBB09
        &.green
          transition .2s
          background #17C935
  a
    &:hover
      color #333
  span
    text-shadow 0px 1px #fff

.control .dropdown, .control .topDropdown
  position absolute
  top 64px
  left 0px
  min-width 36px
  border 1px solid #ccc
  border-top none
  background-color rgba(255, 255, 255, 0.92)

.dropdown
  li
    display inline-block
    span
      cursor pointer
      padding 0 5px
      height 35px
      line-height 35px
      display inline-block
      color #999
      &:hover
        background linear-gradient(to bottom, rgba(225, 225, 228, 0.31), rgba(242, 242, 245, 0.11))
        border-color rgba(0,0,0,0.15)
        box-shadow inset 0 1px rgba(0,0,0,0.07),inset 0 1px 2px rgba(0,0,0,0.1),1px 0 rgba(255,255,255,0.2),-1px 0 rgba(255,255,255,0.2)

.file-dropdown
  span
    width 60px
