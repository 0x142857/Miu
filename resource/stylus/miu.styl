body
  margin 0
  background transparent
  font-family 'Menlo',Consolas,Monaco,Lucida Console,Liberation Mono,DejaVu Sans Mono,Bitstream Vera Sans Mono,Courier New,monospace,serif

h1
  margin-top 10px

ul
  margin 0
  padding-left 0
  &.dropdown
    margin 0
    display none
    text-shadow 0 1px rgba(255,255,255,0.3)
    background #e5eaf4
    padding-left 125px
    font-size 14px
    box-shadow inset 0 -1px #D6D9DE,inset 0px -2px rgba(255,255,255,0.2)

a
  color #333
  text-decoration none
  &.osx-window-btn
    position absolute
    top 0
    width 12px
    height 12px
    border-radius 50%
    margin 17px 0 0 5px
    background #bbb
    &.red
      left 5px
    &.yellow
      left 25px
    &.green
      left 45px
  &.country
    font-size 12px
    text-align center
    display block
    width 33%
    float left
    color #333
    height 40px
    line-height 40px
    transition all .15s ease-in-out
    border-bottom 4px solid transparent
    &:hover
      background-color rgba(0, 0, 0, 0.06)
      line-height 36px

.wrap
