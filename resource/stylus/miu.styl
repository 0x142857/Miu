#open_file
  display none

::-webkit-scrollbar
  width 10px

::-webkit-scrollbar-track
  background-color white

::-webkit-scrollbar-thumb
  min-height 1rem
  background #ccc
  background-clip padding-box
  border 3px solid white
  border-radius 5px
  &:active
    background-color #999
    border-width 2px
  &:window-inactive
    background #eee

hr
  border none
  height 1px
  background-color #eee
  width 80%
  margin 0 auto

.sketch
  position fixed
  width 100%
  height 100%
  z-index -1

.settings
  position fixed
  top 0
  left -260px
  width 260px
  height 100%
  background-color #ededed
  z-index 9999
  background-position center
  transition all .15s ease-in-out
  opacity 1
  background-position -1016px 0
  background-repeat repeat-y

.settings-body
  position absolute
  top 44px
  left 0
  height 100%
  width 100%

.settings-top
  position absolute
  top 0
  left 0
  height 44px
  width 100%
  background #f6f6f8
  border-bottom 1px solid #ddd
  box-shadow inset 0 1px rgba(255,255,255,0.8),inset 0 -1px rgba(255,255,255,0.3)
  overflow hidden

#settings-trigger
  position absolute
  left 3px
  top 0px
  width 35px
  height 44px
  line-height 44px
  font-size 26px
  cursor pointer
  color #6e6e6e
  -webkit-app-region no-drag

.settings-tabs
  margin 0
  padding-left 0
  height 44px
  line-height 44px
  position relative

.settings-tab
  display inline-block
  width 49%
  float left
  text-align center
  a
    color #333
    text-decoration none
    display inline-block
    line-height 20px
    height 20px
    padding 3px 20px
    position relative
    text-shadow 0 1px #fff
    transition all .15s ease-in-out
    &:hover
    &:after
      content ""
      position absolute
      background rgba(171, 171, 171, 0.15)
      width 100px
      height 5px
      left 50%
      margin-left -50px
      top 50%
      margin-top 32.5px
      border-radius 4px
      transition all .35s ease-in-out
  span
    font-size 16px
    position relative
    top 2px

.settings-tab a:hover:after, .settings-tab a.tabbed:after
  content ""
  height 25px
  margin-top -12.5px

.settings-sep
  width 1px
  height 16px
  line-height 10px
  position absolute
  top 50%
  margin-top -8px !important
  left 50%
  margin-left .5px
  background rgba(204, 204, 204, 0.19)

.settings-title
  color rgba(238, 238, 238, 0.85)
  font-size 14px
  font-weight normal
  padding-left 20px

.ios7-switch
  display inline-block
  position relative
  cursor pointer
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  -webkit-tap-highlight-color transparent
  tap-highlight-color transparent
  &.line-sample
    display block
    font-size 14px
    text-align left
    max-width 25em
    line-height 1.5em
    margin 0 auto
    border solid rgba(255, 255, 255, 0.55)
    border-width 0 0 1px 0
    padding 0.5em 1em
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
    color #333
    text-shadow 0 1px #fff
  input[type=checkbox]
    opacity 0
    position absolute
  input
    & + span
      position relative
      display inline-block
      width 1.65em
      height 1em
      background white
      box-shadow inset 0 0 0 0.0625em #e9e9e9
      border-radius 0.5em
      vertical-align -0.15em
      transition all 0.40s cubic-bezier(.17,.67,.43,.98)
      float right
      font-size 1.5em
      &:after
        position absolute
        display block
        content ''
        width 0.875em
        height 0.875em
        border-radius 0.4375em
        top 0.0625em
        left 0.0625em
        background white
        box-shadow inset 0 0 0 0.03em rgba(0,0,0,0.1), 0 0 0.05em rgba(0,0,0,0.05), 0 0.1em 0.2em rgba(0,0,0,0.2)
        transition all 0.25s ease-out
    &:checked
      & + span
        box-shadow inset 0 0 0 0.73em #4cd964
        &:after
          left 0.7125em
    &:focus
      & + span
        box-shadow inset 0 0 0 0.0625em #dadada
        &:after
          box-shadow inset 0 0 0 0.03em rgba(0,0,0,0.15), 0 0 0.05em rgba(0,0,0,0.08), 0 0.1em 0.2em rgba(0,0,0,0.3)
          background #fff
      &:checked
        & + span
          box-shadow inset 0 0 0 0.73em #33be4b
  &:hover
    input
      &:focus
        & + span
          box-shadow inset 0 0 0 0.0625em #e9e9e9
          &:after
            box-shadow inset 0 0 0 0.03em rgba(0,0,0,0.1), 0 0 0.05em rgba(0,0,0,0.05), 0 0.1em 0.2em rgba(0,0,0,0.2)
            background #fff
        &:checked
          & + span
            box-shadow inset 0 0 0 0.73em #4cd964

.ios7-switch:active input + span,
        .ios7-switch input + span:active
  box-shadow inset 0 0 0 0.73em #e9e9e9

.ios7-switch:active input + span:after,
        .ios7-switch input + span:active:after
  width 1.15em

.ios7-switch:active input:checked + span:after,
        .ios7-switch input:checked + span:active:after
  left 0.4375em

.line-sample
  i
    font-size 1.5em
    color #999
    transition all .15s ease-in-out

