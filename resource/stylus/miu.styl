  text-decoration none

.control
  -webkit-app-region no-drag
  margin-left 60px
  display none
  text-align left
  ul
    margin 0
    padding-left 0
    li
      display inline-block
  a
    display inline-block
    text-align center
    padding 0 5px
  span
