    &.osx-window-btn
      background #fff

  .header
    a
      text-decoration none
      color #778087
  

.cps
  -webkit-app-region no-drag
  position absolute
  left 45px
  height 44px
  width 300px

.opts
  -webkit-app-region no-drag
  position absolute
  right 0
  margin-right 10px
  display inline-block
  line-height 44px
  height 44px
  span
    color #333
    display inline-block
  .expand
    color #6e6e6e
